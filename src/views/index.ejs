<!DOCTYPE html>
<html lang="en" ng-app="clientApp">

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
  <meta name="description" content="">
  <meta name="author" content="">
  <link rel="icon" href="../../favicon.ico">
  <title>Navbar Template for Bootstrap</title>
  <!-- bower:css -->
  <link rel="stylesheet" href="lib/bootstrap/dist/css/bootstrap.css" />
  <link rel="stylesheet" href="lib/angular-bootstrap/ui-bootstrap-csp.css" />
  <!-- endbower -->
  <!-- inject:css -->
  <link rel="stylesheet" href="/css/app.css">
  <!-- endinject -->
</head>

<body>
  <div class="container">
    <!-- Static navbar -->
    <nav class="navbar navbar-default" ng-controller="navController">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false"
            aria-controls="navbar">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          <a class="navbar-brand" href="#">Project name</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li ng-class="{active: isActive('/home')}"><a href="/home">Home</a></li>
            <li ng-class="{active: isActive('/about')}"><a href="/about">About</a></li>
            <li ng-class="{active: isActive('/contact')}"><a href="/contact">Contact</a></li>
          </ul>
        </div>
        <!--/.nav-collapse -->
      </div>
      <!--/.container-fluid -->
    </nav>
  </div>
  <!-- Main Componet -->
  <div class="container">
    <div ng-view></div>
  </div>
  <!-- Placed at the end of the document so the pages load faster -->
  <!-- bower:js -->
  <script src="lib/angular/angular.js"></script>
  <script src="lib/jquery/dist/jquery.js"></script>
  <script src="lib/bootstrap/dist/js/bootstrap.js"></script>
  <script src="lib/angular-route/angular-route.js"></script>
  <script src="lib/angular-bootstrap/ui-bootstrap-tpls.js"></script>
  <!-- endbower -->
  <!-- inject:js -->
  <script src="/js/app.js"></script>
  <script src="/js/controllers/about-controller.js"></script>
  <script src="/js/controllers/contact-contoller.js"></script>
  <script src="/js/controllers/home-controller.js"></script>
  <script src="/js/controllers/nav-controller.js"></script>
  <!-- endinject -->
</body>

</html>